<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- accountDao-->
    <bean id="accountDao" class="me.stormma.litespring.service.v2.entity.AccountDao"/>

    <!-- itemDao-->
    <bean id="itemDao" class="me.stormma.litespring.service.v2.entity.ItemDao"/>

    <!-- prototype bean definition -->
    <bean id="petStore" class="me.stormma.litespring.service.v2.entity.PetStoreService">
        <property name="accountDao" ref="accountDao"/>
        <property name="itemDao" ref="itemDao"/>
    </bean>
</beans>