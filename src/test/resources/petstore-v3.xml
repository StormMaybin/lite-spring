<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- accountDao-->
    <bean id="accountDao" class="me.stormma.litespring.test.v3.entity.AccountDao"/>

    <!-- itemDao-->
    <bean id="itemDao" class="me.stormma.litespring.test.v3.entity.ItemDao"/>

    <!-- prototype bean definition -->
    <bean id="petStore" class="me.stormma.litespring.test.v3.entity.PetStoreService">
        <constructor-arg ref="accountDao"/>
        <constructor-arg ref="itemDao"/>
        <constructor-arg value="2"/>
    </bean>
</beans>